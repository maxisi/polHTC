#!/bin/bash

# Define default values:

DET="H1"
RUN="S5"
PSR="J0534+2200"
KIND="GR"

PDIF="p"

# Check options provided:

while getopts "d:r:p:k:" flag; do 
case "$flag" in
	d) DET=$OPTARG;; 
	r) RUN=$OPTARG;; 
	p) PSR=$OPTARG;; 
	k) KIND=$OPTARG;; 
esac 
done

NINST=${@:$OPTIND:1}
NINJ=${@:$OPTIND+1:1}

# Create submit file

arg=("$PSR" "$DET" "$RUN" "$KIND" "$PDIF" "$NINST" "$NINJ")

./analysis_single/injsrch_master.py "${arg[@]}"

# Report and prompt user before submitting

echo "Analyzing "$NINST" instantiations with "$NINJ" injections. Parameters:"
echo -e "\tPulsar:\t"$PSR""
echo -e "\tData:\t"$DET" "$RUN""
echo -e "\tInj:\t"$KIND" "$PDIF""

while true; do 
	read -p "Submit?" yn 
	case $yn in  
		[Yy]* ) condor_submit subs/injsrch_"$DET""$RUN"_"$PSR"_"$KIND""$PDIF".sub; break;;
		* ) exit;; 
	esac 
done

# condor_submit subs/injsrch_"$DET""$RUN"_"$PSR"_"$KIND""$PDIF".sub;;

